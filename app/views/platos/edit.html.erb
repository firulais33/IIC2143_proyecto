<body class="Total" >
  <div class="col-md-6 col-md-offset-3">
    <div class="login-form">
      <% if admin_signed_in? or @restaurant.user_id == current_user.id %>

        <%= simple_form_for ([@restaurant, @plato]) do |f|  %>
          <%= f.file_field :plato_img %>
          <%= f.input :nombre, label: "Nombre Plato" %>
          <%= f.input :precio %>
          <%= f.input :descripcion %>
          <%= f.input :cantidad_personas %>
          <%= f.button :submit %>
        <% end %>
      <% end %>
    </div>
  </div>
</body>
