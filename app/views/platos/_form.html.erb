<body class="Total" >
  <div class="col-md-6 col-md-offset-3">
    <div class="login-form">
      <%= simple_form_for ([@restaurant, @restaurant.platos.build]) do |f| %>
        <%= f.file_field :plato_img %>
        <%= f.input :nombre, label: "Nombre Plato" %>
        <%= f.input :precio %>
        <%= f.input :descripcion %>
        <%= f.input :cantidad_personas %>
        <%= f.button :submit, "Crear Plato", :class => 'btn-custom2' %>
      <% end %>
    </div>
  </div>
</body>
