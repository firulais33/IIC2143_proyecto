<body class="Total" >
  <div class="col-md-6 col-md-offset-3">
    <div class="login-form">
        <% if admin_signed_in? or @restaurant.user_id == current_user.id %>

            <%= simple_form_for @restaurant do |f| %>
                <%= f.file_field :restaurant_img %>
                <%= f.input :nombre, label: "Nombre Restaurante" %><br />
                <%= f.input :correo %><br />
                <%= f.input :direccion %><br />
                <%= f.input :numero %><br />
                <%= f.button :submit %>
            <% end %>
        <% end %>
    </div>
  </div>
</body>
